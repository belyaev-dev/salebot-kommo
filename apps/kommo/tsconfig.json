{
    "compilerOptions": {
      "module": "Node16",
      "moduleResolution": "Node16",
      "target": "es2022",
      "esModuleInterop": true,
  
      "strict": true,
      "strictNullChecks": true,
      "strictBindCallApply": false,
      "skipLibCheck": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "declaration": true,
  
      "lib": ["es2022"],
      "outDir": "dist",
      "rootDirs": ["src"],
      "types": ["node"]
    },
    "ts-node": {
      "esm": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }